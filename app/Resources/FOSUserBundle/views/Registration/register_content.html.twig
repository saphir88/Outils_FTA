{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="col-lg-6 col-lg-offset-3 inscription">
        <h3>Mon compte : </h3>

        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        <div class="row ">
            <div class="col-lg-6">
                {{ form_row(form.email, {'label':'Adresse e-mail* :'}) }}
            </div>
            <div class="col-lg-6">
                {{ form_row(form.username, {'label':"Nom d'utilisateur* :"}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {{ form_label(form.plainPassword.first, 'Mot de passe* :') }}
                {{ form_widget(form.plainPassword.first, {'attr' : {'title':'Le mot de passe doit contenir au moins 8 caractères dont une majuscule, une minuscule, un chiffre et un caractère spécial.', 'class':'message'}}) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
            <div class="col-lg-6">
                {{ form_row(form.plainPassword.second, {'label':'Confirmer le mot de passe* :'}) }}
            </div>
        </div>
    </div>
</div>
<br>
<div class="container inscription">
    <div class="">
        <h3>Ma startup : </h3>
        <div class="row">
            <div class="col-lg-4">
                {{ form_row(form.communaute.nomStartup) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.communaute.nomSociete) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.communaute.siret) }}
            </div>
        </div>
        {{ form_row(form.communaute.file, {'attr' : {'title':'Format de fichier authorisé: .jpg, .png, .jpeg. \n Taille maximum: 2Mo', 'class':'message'}}) }}

        <div class="row">
            <div class="col-lg-4">
                {{ form_row(form.communaute.categorie) }}
            </div>
            <div class="col-lg-8">
                {{ form_row(form.communaute.adresse) }}
            </div>
        </div>



        {{ form_row(form.communaute.description) }}


        <div class="row">
            <div class="col-lg-6">
                {{ form_row(form.communaute.siteWeb) }}
            </div>
            <div class="col-lg-6">
                {{ form_row(form.communaute.ChaineYouTube) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {{ form_row(form.communaute.video) }}
                {{ form_row(form.communaute.facebook) }}
            </div>
            <div class="col-lg-6">
                {{ form_row(form.communaute.twitter) }}
                {{ form_row(form.communaute.linkedin) }}
            </div>
        </div>

        <div>
            {{ form_row(form.communaute.siret) }}
        </div>
        <div class="row">
            <div class="col-lg-4">
                {{ form_row(form.communaute.nomContact) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.communaute.mail) }}
            </div>
            <div class="col-lg-4">
                {{ form_row(form.communaute.telephone) }}
                {{ form_row(form.communaute.validation, { 'attr' : { 'value': 0 }}) }}
            </div>
        </div>
        {{ form_widget(form.communaute.images, { 'attr' : { 'style':'display:none'}}) }}
    </div>
    <p>Merci de complèter les champs obligatoires (*).</p>

    <br>
    <div>
        <input type="submit" value="{{ 'Inscription'|trans }}" />
    </div>

    {{ form_end(form) }}
</div>