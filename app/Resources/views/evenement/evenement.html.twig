{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="text-center">
                <h1>{{ event.0.titre }}</h1>
            </div>
            <div class="col-lg-10 img-event">
                <img src="{{ event.0.image }}" class="img-responsive">
            </div>
            <div class="col-lg-2 redbox">
                <div class="v-center">
                    <div class="date">{{ jour }}</div>
                    <div class="hour">{{ heure }}</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="text-justify event-description">
                {{  event.0.description | raw }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-9 bluebox">
                <h3>Où se situe cet événement ?</h3>
                <p>{{ event.0.localisation }}</p>
            </div>
            <div class="col-lg-3 darkbluebox">
                <p class="v-center text-center">Participants : X / {{ event.0.nbMaxParticipants }}</p>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>

    <div class="container">
        <div class="panel panel-info">
            <div class="panel-heading">Startups participantes</div>
            <div class="panel-body">

                <div class="container-fluid participant_startup_box">
                    <div class="col-lg-11 event-description">
                        <p>Startup 1</p>
                    </div>
                    <div class="col-lg-1 bluebox text-center">
                        <div class="row">
                            <button type="button" class="btn btn-default btn-lg">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>1
                            </button>
                        </div>
                        <div class="row">
                            <h3>72</h3>
                        </div>
                    </div>
                </div>

                <div class="container-fluid participant_startup_box_">
                    <div class="col-lg-11 event-description">
                        <p>Startup 2</p>
                    </div>
                    <div class="col-lg-1 bluebox text-center">
                        <div class="row">
                            <button type="button" class="btn btn-default btn-lg">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>1
                            </button>
                        </div>
                        <div class="row">
                            <h3>56</h3>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>



{% endblock %}
{% block javascripts %}
{% endblock %}