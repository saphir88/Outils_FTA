{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="text-center">
                <h1>{{ event.0.titre }}</h1>
            </div>
            <div class="col-lg-10 img-event">
                <img style="height: 548px;width: 1000px" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRbl8FbTtd2i9U-cuc2kZ56mv32svcQhH3QHr2ZAzAwSJQP4_xUyA">
            </div>
            <div class="col-lg-2 redbox">
                <div class="v-center">
                    <div class="date">{{ jour }}</div>
                    <div class="hour">{{ heure }}</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="text-justify event-description">
                {{  event.0.description | raw }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-9 bluebox">
                <h3>Où se situe cet événement ?</h3>
                <p>{{ event.0.localisation }}</p>
            </div>
            <div class="col-lg-3 darkbluebox">
                <p class="v-center text-center">Participants : X / {{ event.0.nbMaxParticipants }}</p>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>

    <div class="container">
        <div class="panel panel-info">
            <div class="panel-heading">Startups participantes</div>
            <div class="panel-body">
                {% for i in 1..10 %}
                <div class="container-fluid participant_startup_box">
                    <div class="col-lg-11 event-description">
                        <p>Startup {{ i }}</p>
                    </div>
                    <div class="col-lg-1 bluebox text-center">
                        <div class="row">
                            <button type="button" class="btn btn-default btn-lg">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="row">
                            <h3>72</h3>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}
{% block javascripts %}
{% endblock %}