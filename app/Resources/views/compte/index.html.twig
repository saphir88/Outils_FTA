{% extends 'base.html.twig' %}

{% block body %}
    {{ dump(form) }}
    {{ dump(communaute) }}
    <h1>Modification de la Startup "{{ communaute.nomStartup }}"</h1>
    <div class="container">
        {{ form_start(form) }}
        {{ form_row(form.nomStartup) }}
        {{ form_label(form.logo) }}
        <br>
        <img src="{{ asset('uploads/img/') }}{{ communaute.logo }}" width="300">
        {{ form_errors(form.logo) }}
        {{ form_widget(form.logo, {'required': false}) }}
        {{ form_rest(form) }}

        <div class="container">
            <button type="submit" class="btn btn-success">Valider les modifications</button>
            {{ form_end(form) }}
            {{ form_start(delete_form) }}
            <button class="btn btn-danger" type="submit">Supprimer</button>
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
