{% extends 'base.html.twig' %}

{% block body %}
<div class="container jumbotron">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
   <center><h1>{{ communaute.nomStartup }}</h1></center>
        {{ form_start(edit_form) }}
        {{ form_row(edit_form.nomStartup) }}
        {#{{ form_label(edit_form.file) }}#}
        <br>

        <img src="{{ asset(communaute.file) }}" width="150">
        {{ form_errors(edit_form.file) }}
        {{ form_widget(edit_form.file, {'required': false}) }}
        {{ form_rest(edit_form) }}

        <div class="container">
            <button type="submit" class="btn btn-success">Valider les modifications</button>
            {{ form_end(edit_form) }}
            {{ form_start(delete_form) }}
            <button class="btn btn-danger" type="submit">Supprimer</button>
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
