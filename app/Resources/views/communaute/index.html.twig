{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
                <h2 class="">Gestion des Startups</h2>
            </div>
        </div>
        <div class="container">
            <div class="row select">
                <div class=" col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-3">
                    <label for="sel1">Domaine :</label>
                    <select class="" id="Type">
                        <option value="">Tous</option>
                        <option value="HealthTech">HealthTech</option>
                        <option value="IoT Manufacturing">IoT Manufacturing</option>
                        <option value="AI">AI</option>
                        <option value="VR/VA">VR/VA</option>
                        <option value="Blockchain">Blockchain</option>
                        <option value="FoodTech">FoodTech</option>
                        <option value="Mobility">Mobility</option>
                        <option value="IT/ Software / App">IT/ Software / App</option>
                        <option value="Smartcity">Smartcity</option>
                        <option value="Sustainability">Sustainability</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            {% for  communaute in communautes %}
                <div data-Type="{{ communaute.categorie }}" class="col-lg-4 col-md-6 col-sm-6 modalUnique">
                    <div class="startUP">
                        <h1 class="nomStartUp">{{ communaute.id }} :{{ communaute.nomStartup }}</h1>
                        <center><img class="logo" src="/uploads/{{ communaute.filename }}"></center>
                        <a class="btn btn-primary" href="{{ path('communaute_edit', { 'id': communaute.id }) }}">Modifier</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
