{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="text-center">Startups inscrites à un événement</h1>
            <table class="table">
                <thead>
                <tr>
                    <th>Titre de l'évenement</th>
                    <th>StartUp</th>
                    <th>Nom de Societe</th>
                    <th>Email</th>
                    <th>Categorie</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for participation in participations %}

                    <tr>
                        <td>{{ participation.event.titre }}</td>
                        <td>{{ participation.communaute.nomStartUp }}</td>
                        <td>{{ participation.communaute.nomSociete }}</td>
                        <td>{{ participation.communaute.mail }}</td>
                        <td>{{ participation.communaute.categorie }}</td>

                        <td>
                            {{ form_start(delForms[loop.index0]) }}
                            <input class="btn btn-danger" type="submit" value="Supprimer">
                            {{ form_end(delForms[loop.index0]) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <style>
        tr:nth-child(even) {background-color: #f2f2f2;}
        .table,th,tr,td{border: 1px solid black;}
    </style>
{% endblock %}
